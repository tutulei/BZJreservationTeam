.avatar-wrapper {
  background: #e27d08c9;
  height: 40px;
  padding: 10px 0;
}


.avatar-wrapper .content image {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 25px;
  height: 25px;
}

.avatar-wrapper .content homeusermsg {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 10px;

}

.section {
  border: 8rpx solid black;
  margin: 10px;
  border: solid 1px;
  border-radius: 5px;
  height: 60px;
  width: 95%;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btn {
  width: 80px;
  height: 40px;
  background-color: burlywood;
  color: black;
  border-radius: 98rpx; 
  text-align: center; 
  line-height: 40px;
}

.picker {
  width: 80px;
